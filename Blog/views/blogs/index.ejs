<%- include('../partials/header')%>
<table>
  <thead>
    <tr>
      <th>All blogs</th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach(function(b){ %>
    <tr>
      <td><a href="/blogs/<%= b._id%>"><%= b.title%></a></td>
      <div class="container-sm container-sm-light">
        <td><%= b.snippet%></td>
        <form action="/blogs/<%= b._id%>?_method=DELETE" method="POST">
          <td><button class="btn btn-secondary">X</button></td>
        </form>
      </div>
    </tr>
    <%});%>
  </tbody>
</table>
<%- include('../partials/footer')%>
