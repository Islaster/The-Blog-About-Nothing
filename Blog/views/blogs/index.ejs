<%- include('../partials/header')%>
<table class="table">
  <thead>
    <tr>
      <th class="col">All blogs</th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach(function(b){ %>
    <tr>
      <td><a href="/blogs/<%= b._id%>"><%= b.title%></a></td>
      <td><%= b.snippet%></td>
      <% if(user && user._id.equals(b.author)){%>
      <form action="/blogs/<%= b._id%>?_method=DELETE" method="POST">
        <td><button class="btn btn-light">X</button></td>
      </form>
      <%}%>
    </tr>
    <%});%>
  </tbody>
</table>
<%- include('../partials/footer')%>
